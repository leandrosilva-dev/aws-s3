{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        //"strict": true,
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": false,
        "baseUrl": "./",
        "paths": {
            "@config/*": [
                "src/config/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ]
        },
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}